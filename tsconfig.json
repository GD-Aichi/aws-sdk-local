{
    "compilerOptions": {
        "experimentalDecorators": true,
        "lib": ["es2016", "es2017"],
        "module": "commonjs",
        "target": "es2017",
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "declaration": true,
        "removeComments": false,
        "noUnusedLocals": false
    }
}
